{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "typeRoots": ["./src/types","./types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
